<!DOCTYPE html>
<html>
<body style="background-color:#a5a5a5">

  <div class="jumbotron">
    <div class="container">
      <h1 class="task-index" align="center">All Tasks</h1>
      <p><a class="btn btn-primary btn-lg" href="/dashboard" type="button" >Home Page</a></p>
    </div>
  </div>


  <div class="col-lg-4" id="list">
    <ul class="list-group">
      <% @tasks.each do |task| %>
      <h4 class="task-index list-group-item" style="color:red"><%= task.id %>: <a href="/tasks/<%= task.id %>"><%= task.title %></a></h4>
      <a href="/tasks/<%= task.id %>/edit">Edit</a>
      <% end %>
    </ul>
  </div>

</body>
</html>
